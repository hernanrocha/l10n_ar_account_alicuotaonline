<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIQUIDACION AGIP - WIZARD -->
    <record model='ir.ui.view' id='agente_agip_wizard_form'>
        <field name='name'>Reporte AGIP</field>
        <field name="model">l10n_ar.agente.agip.wizard</field>
        <field name='arch' type='xml'>
            <form>
                <field name="type" invisible="1"/>
                <header>
                    <button name="action_present" string="Presentar" states="draft" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancelar" states="draft,presented" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,presented"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" widget="selection" groups="base.group_multi_company" invisible="1" />
                            <field name="name" />
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Archivos" name="files">
                            <button name="generate" class="btn btn-primary" type="object" string="Generar Informacion" states="draft"/>
                            <group>
                                <field name="agip_cbtes_filename" invisible="1"/>
                                <field name="agip_nc_filename" invisible="1"/>
                                <field name="agip_cbtes_csv_filename" invisible="1"/>
                                <field name="agip_nc_csv_filename" invisible="1"/>
                                <group>
                                    <field name="agip_cbtes_file" filename="agip_cbtes_filename"/>
                                    <field name="agip_nc_file" filename="agip_nc_filename"/>
                                    <field name="agip_cbtes_csv_file" filename="agip_cbtes_csv_filename"/>
                                    <field name="agip_nc_csv_file" filename="agip_nc_csv_filename"/>
                                    <!-- <field name="AGIP_CBTES" /> -->
                                    <!-- <field name="AGIP_NC" /> -->
                                </group>
                            </group>
                        </page>
                        <!-- TODO: groups="base.group_no_one" -->
                        <page string="Comprobantes TXT" name="invoices_txt">
                            <field name="comprobante_file_line_ids">
                                <tree default_order="fecha">
                                    <field name="tipo_operacion"/>
                                    <field name="codigo_norma" optional="hide" />
                                    <field name="fecha"/>
                                    <field name="tipo_cbte"/>
                                    <field name="letra_cbte"/>
                                    <field name="numero_cbte"/>
                                    <field name="fecha_cbte" optional="hide" />
                                    <field name="monto_total"/>
                                    <field name="numero_certificado"/>
                                    <field name="tipo_doc" optional="hide" />
                                    <field name="numero_doc"/>
                                    <field name="situacion_iibb" optional="hide" />
                                    <field name="numero_iibb" optional="hide" />
                                    <field name="situacion_iva" optional="hide" />
                                    <field name="razon_social"/>
                                    <field name="monto_otros"/>
                                    <field name="monto_iva"/>
                                    <field name="monto_base" />
                                    <field name="monto_alicuota" />
                                    <field name="monto_impuesto_1" />
                                    <field name="monto_impuesto_2" optional="hide" />
                                </tree>
                            </field>
                        </page>
                        <!-- <page string="Notas de Credito TXT" name="credit_notes_txt">
                            <field name="nota_credito_file_line_ids">
                                <tree default_order="fecha">
                                    <field name="tipo_operacion" />
                                    <field name="numero_nc" />
                                    <field name="fecha" />
                                    <field name="monto_base_nc" />
                                    <field name="certificado" />
                                    <field name="tipo_cbte" />
                                    <field name="letra_cbte" />
                                    <field name="numero_cbte" />
                                    <field name="numero_doc" />
                                    <field name="codigo_norma" />
                                    <field name="fecha_cbte" />
                                    <field name="monto_perc" />
                                    <field name="monto_alicuota" />
                                </tree>
                            </field>
                        </page> -->
                        <page string="Comprobantes" name="invoices">
                            <field name="invoice_ids">
                                <tree default_order="date">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="partner_id" />
                                    <field name="document_type_id" />
                                    <field name="document_number" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="Percepciones" name="percepciones">
                            <field name="perc_line_ids">
                                <tree default_order="date">
                                    <field name="date" />
                                    <field name="move_id" />
                                    <field name="journal_id" />
                                    <field name="account_id" />
                                    <field name="debit" sum="Total" />
                                    <field name="credit" sum="Total" />
                                    <field name="balance" sum="Total" />
                                </tree>
                            </field>
                        </page>
                        <page string="Pagos" name="payments">
                            <field name="payment_ids">
                                <tree default_order="date">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="partner_id" />
                                    <field name="document_type_id" />
                                    <field name="document_number" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="Retenciones" name="retenciones">
                            <field name="ret_line_ids">
                                <tree default_order="date">
                                    <field name="date" />
                                    <field name="move_id" />
                                    <field name="journal_id" />
                                    <field name="account_id" />
                                    <field name="payment_id" />
                                    <field name="debit" sum="Total" />
                                    <field name="credit" sum="Total" />
                                    <field name="balance" sum="Total" />
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIQUIDACION ARBA - WIZARD -->
    <record model='ir.ui.view' id='agente_arba_wizard_form'>
        <field name='name'>Reporte ARBA</field>
        <field name="model">l10n_ar.agente.arba.wizard</field>
        <field name='arch' type='xml'>
            <form>
                <field name="type" invisible="1"/>
                <header>
                    <!-- TODO: mostrar warning de cantidad de solicitudes -->
                    <!-- TODO: descargar excel -->

                    <button name="action_present" string="Presentar" states="draft" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancelar" states="draft,presented" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,presented"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" widget="selection" groups="base.group_multi_company" invisible="1" />
                            <field name="name" />
                            <field name="tipo" />
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="percepcion_arba_aplicada_id"/>
                            <field name="retencion_arba_aplicada_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Archivos" name="files">
                            <button name="generate" class="btn btn-primary" type="object" string="Generar Informacion" states="draft"/>
                            <group>
                                <field name="arba_perc_filename" invisible="1"/>
                                <field name="arba_ret_filename" invisible="1"/>
                                <field name="arba_perc_csv_filename" invisible="1"/>
                                <field name="arba_ret_csv_filename" invisible="1"/>
                                <group>
                                    <field name="arba_perc_file" filename="arba_perc_filename"
                                        attrs="{'invisible': [('tipo', '=', 'retenciones')]}" />
                                    <field name="arba_perc_csv_file" filename="arba_perc_csv_filename"
                                        attrs="{'invisible': [('tipo', '=', 'retenciones')]}" />

                                    <field name="arba_ret_file" filename="arba_ret_filename"
                                        attrs="{'invisible': [('tipo', '=', 'percepciones')]}" />
                                    <field name="arba_ret_csv_file" filename="arba_ret_csv_filename" 
                                        attrs="{'invisible': [('tipo', '=', 'percepciones')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Percepciones TXT" name="percepciones_txt" 
                            attrs="{'invisible': [('tipo', '=', 'retenciones')]}">
                            <field name="percepciones_file_line_ids">
                                <tree default_order="fecha">
                                    <field name="cuit"/>
                                    <field name="fecha"/>
                                    <field name="tipo_cbte" />
                                    <field name="letra_cbte" />
                                    <field name="pto_venta" />
                                    <field name="numero_cbte" />
                                    <field name="monto_imponible" />
                                    <field name="monto_percepcion" />
                                    <field name="tipo_operacion" />
                                </tree>
                            </field>
                        </page>
                        <page string="Retenciones TXT" name="retenciones_txt" 
                            attrs="{'invisible': [('tipo', '=', 'percepciones')]}">
                            <field name="retenciones_file_line_ids">
                                <tree default_order="fecha">
                                    <field name="cuit"/>
                                    <field name="fecha"/>
                                    <field name="numero_sucursal"/>
                                    <field name="numero_emision" />
                                    <field name="monto_percepcion" />
                                    <field name="tipo_operacion" />
                                </tree>
                            </field>
                        </page>
                        <page string="Comprobantes" name="invoices" 
                            attrs="{'invisible': [('tipo', '=', 'retenciones')]}">
                            <field name="invoice_ids">
                                <tree default_order="date">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="partner_id" />
                                    <field name="document_type_id" />
                                    <field name="document_number" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="Percepciones" name="percepciones"
                            attrs="{'invisible': [('tipo', '=', 'retenciones')]}">
                            <field name="perc_line_ids">
                                <tree default_order="date">
                                    <field name="date" />
                                    <field name="move_id" />
                                    <field name="journal_id" />
                                    <field name="account_id" />
                                    <field name="debit" sum="Total" />
                                    <field name="credit" sum="Total" />
                                    <field name="balance" sum="Total" />
                                </tree>
                            </field>
                        </page>
                        <page string="Pagos" name="payments"
                            attrs="{'invisible': [('tipo', '=', 'percepciones')]}">
                            <field name="payment_ids">
                                <tree default_order="date">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="partner_id" />
                                    <field name="document_type_id" />
                                    <field name="document_number" />
                                    <!-- <field name="payment_id" /> -->
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="Retenciones" name="retenciones"
                            attrs="{'invisible': [('tipo', '=', 'percepciones')]}">
                            <field name="ret_line_ids">
                                <tree default_order="date">
                                    <field name="date" />
                                    <field name="move_id" />
                                    <field name="journal_id" />
                                    <field name="account_id" />
                                    <field name="payment_id" />
                                    <field name="debit" sum="Total" />
                                    <field name="credit" sum="Total" />
                                    <field name="balance" sum="Total" />
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>